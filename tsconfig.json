{
  "compilerOptions": {
    "strict": true,
    "module": "ES2020",
    "target": "ES2020",
    "moduleResolution": "Node",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "types": [
      "vite/client"
    ],
    "jsx": "react",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@components": [
        "components/index"
      ],
      "@components/*": [
        "components/*",
        "components/index"
      ],
      "@types": [
        "types/index"
      ],
      "@types/*": [
        "types/*",
        "types/index"
      ],
      "@pages": [
        "pages/index"
      ],
      "@pages/*": [
        "pages/*",
        "pages/index"
      ],
    }
  },
  "ts-node": {
    "transpileOnly": true,
    "esm": true,
    "compilerOptions": {
      "moduleResolution": "Node16"
    }
  }
}